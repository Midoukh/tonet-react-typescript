{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "@components": ["/src/components/*"],
      "@utils": ["/src/utils/*"],
      "@assets": ["/src/assets/*"]
    }
  },
  "exclude": ["node_modules"]
}
