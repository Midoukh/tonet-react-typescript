{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      // "@/utils": ["src/utils/*"],
      // "@/assets": ["src/assets/*"]
      "@/*": ["src/*"],
      "@/components": ["src/components/"]
    }
  },
  "include": ["src"]
}
